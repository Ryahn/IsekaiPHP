APP_NAME="Zonie Torrents"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=torrent_db
DB_USERNAME=root
DB_PASSWORD=root

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# CSRF
CSRF_TOKEN_NAME=_token

# File Upload
UPLOAD_MAX_SIZE=104857600
UPLOAD_PATH=storage/uploads

# Traefik
TRAEFIK_NETWORK=traefik
TRAEFIK_DOMAIN=zonie.localhost

# Application Key (for encryption - generate with: php -r "echo 'base64:' . base64_encode(random_bytes(32));")
APP_KEY=
