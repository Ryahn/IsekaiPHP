{
    "name": "isekaiphp/framework",
    "description": "IsekaiPHP - A custom micro framework with authentication, file management, and torrent parsing",
    "type": "project",
    "require": {
        "php": "^8.4",
        "illuminate/view": "^11.0",
        "illuminate/database": "^11.0",
        "illuminate/events": "^11.0",
        "illuminate/pagination": "^11.0",
        "symfony/http-foundation": "^6.0",
        "vlucas/phpdotenv": "^5.0",
        "symfony/console": "^6.0",
        "symfony/mime": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "autoload": {
        "psr-4": {
            "IsekaiPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IsekaiPHP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "lint": "phpcs --standard=phpcs.xml",
        "lint:fix": "php-cs-fixer fix",
        "lint:check": "php-cs-fixer fix --dry-run --diff"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/torrentpier/scrapeer"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}
